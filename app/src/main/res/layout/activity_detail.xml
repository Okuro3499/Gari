<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".activities.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/arrowleftwhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/md_white_1000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/back"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/menu_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/errorPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Oops Sorry!"
                android:textColor="?attr/textColor"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/oh_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="It looks like something went wrong"
                android:textColor="?attr/textColor"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:textColor="?attr/textColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wrong" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg_dark"
                android:fontFamily="@font/poppins_bold"
                android:text="Refresh"
                android:textAllCaps="false"
                android:textColor="?attr/buttonTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <com.facebook.shimmer.ShimmerFrameLayout-->
        <!--            android:id="@+id/shimmerLayout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:gravity="center"-->
        <!--            android:orientation="vertical"-->
        <!--            android:visibility="visible"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">-->

        <!--            <include layout="@layout/detail_shimmer" />-->
        <!--        </com.facebook.shimmer.ShimmerFrameLayout>-->

        <!--        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
        <!--            android:id="@+id/swipeRefresh"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:fillColor="#FFFFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:pageColor="#000000"
                        app:radius="6dp"
                        app:slideInterval="3000"
                        app:strokeColor="#FF777777"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/availBackground"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="4dp"
                        android:textColor="@color/availText"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewPager" />

                    <ImageButton
                        android:id="@+id/ibSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/backgroundColor"
                        android:contentDescription="@string/save_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewPager"
                        app:srcCompat="@drawable/ic_baseline_favorite_border_30" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/specifications"
                        android:textColor="?attr/textColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

                    <GridLayout
                        android:id="@+id/grid1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/backgroundColor"
                        android:columnCount="3"
                        android:gravity="center"
                        android:rowCount="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView">

                            <TextView
                                android:id="@+id/titleRegistration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/registration"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvRegistration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/color"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titlePassengers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/passengers"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvPassengers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleTransmission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/transmission"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvTransmission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleCc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/cc"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvEngine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleDoors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/doors"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvDoors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/company"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleDriveOption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/drive"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvDriveOption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/titleFuel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/fuel"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvFuel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </GridLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/features"
                        android:textColor="?attr/textColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/grid1" />

                    <GridLayout
                        android:id="@+id/gridFeatures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/backgroundColor"
                        android:columnCount="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

                    <TextView
                        android:id="@+id/titleDates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/dates"
                        android:textColor="?attr/textColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gridFeatures" />

                    <LinearLayout
                        android:id="@+id/ltDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titleDates">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxBackgroundColor="@color/md_white_1000"
                            app:boxStrokeColor="@color/md_white_1000"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <TextView
                                android:id="@+id/ETDFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_input"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="@string/dd_mm_yyyy"
                                android:textColor="@color/colorPrimary"
                                android:padding="4dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp"
                                app:boxBackgroundColor="@color/md_white_1000"
                                app:drawableStartCompat="@drawable/ic_baseline_date_range_24" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="?attr/textColor"
                            android:fontFamily="@font/poppins_bold"
                            android:text="to" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxBackgroundColor="@color/md_white_1000"
                            app:boxStrokeColor="@color/md_white_1000"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/titleDates">

                            <TextView
                                android:id="@+id/ETDTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autofillHints=""
                                android:background="@drawable/custom_input"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="@string/dd_mm_yyyy"
                                android:textColor="@color/colorPrimary"
                                android:padding="4dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp"
                                app:drawableStartCompat="@drawable/ic_baseline_date_range_24" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/grid4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:gravity="center"
                        android:rowCount="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ltDates">

                        <LinearLayout
                            android:id="@+id/tdays"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ltDates">

                            <TextView
                                android:id="@+id/titleTotalDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/total_days"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvTotalDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="0"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/backgroundColor"
                            android:orientation="vertical"
                            android:padding="4dp"
                            app:layout_constraintStart_toEndOf="@+id/tdays"
                            app:layout_constraintTop_toBottomOf="@+id/ltDates">

                            <TextView
                                android:id="@+id/titlePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/price"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="?attr/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </GridLayout>

                    <TextView
                        android:id="@+id/titleDriv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Drive"
                        android:textColor="?attr/textColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/grid4" />

                    <RadioGroup
                        android:id="@+id/radioDriveGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titleDriv">

                        <RadioButton
                            android:id="@+id/radioSelfDrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radio_selfDrive"
                            android:textColor="?attr/textColor"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/radioChauffeured"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/radio_chauffeured"
                            android:textColor="?attr/textColor"
                            android:textSize="14sp" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/edtDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="6dp"
                        app:boxBackgroundColor="@color/md_white_1000"
                        app:boxStrokeColor="@color/md_white_1000"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/bkCard"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/radioDriveGroup">

                        <EditText
                            android:id="@+id/etDestination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:autofillHints=""
                            android:background="@drawable/custom_input"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/destination"
                            android:inputType="text"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/bkCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:background="?attr/backgroundColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="?attr/textColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_bg_dark"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="10dp"
                            android:text="@string/book_now"
                            android:textAllCaps="false"
                            android:textColor="?attr/buttonTextColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/backgroundColor"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="?attr/textColor"
        app:itemTextAppearance="@font/poppins_regular"
        app:itemTextColor="?attr/textColor"
        app:menu="@menu/nav_menu"
        app:subheaderColor="?attr/textColor" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/outNavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?attr/backgroundColor"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/logged_out_header"
        app:itemIconTint="?attr/textColor"
        app:itemTextAppearance="@font/poppins_regular"
        app:itemTextColor="?attr/textColor"
        app:menu="@menu/log_in_menu"
        app:subheaderColor="?attr/textColor" />
</androidx.drawerlayout.widget.DrawerLayout>
