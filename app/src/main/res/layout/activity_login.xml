<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="199dp"
            android:layout_height="120dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="100dp"
            android:contentDescription="@string/companylogo"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/etEmailAddress"
            android:layout_width="300dp"
            android:layout_height="39dp"
            android:layout_below="@id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="?attr/textColor" />

        <TextView
            android:id="@+id/errorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_red_900"
            android:layout_marginStart="55dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/etEmailAddress"
            android:text="Required"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="39dp"
            android:layout_below="@+id/errorEmail"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:textColor="?attr/textColor" />

        <ImageView
            android:id="@+id/password_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errorEmail"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:maxLength= "16"
            android:layout_toEndOf="@id/etPassword"
            android:contentDescription="password toggle"
            android:src="@drawable/outline_visibility_black_24dp" />

        <TextView
            android:id="@+id/errorPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_red_900"
            android:layout_marginStart="55dp"
            app:counterEnabled="true"
            app:counterMaxLength="16"
            android:layout_centerVertical="true"
            android:layout_below="@+id/etPassword"
            android:text="Required"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errorPassword"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:text="@string/remember_me"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-6dp"
            android:text="@string/login" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/btLogin"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/tvFingerprint"
            android:contentDescription="@string/fingerprint"
            app:srcCompat="@drawable/outline_fingerprint_black_24dp" />

        <TextView
            android:id="@+id/tvFingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btLogin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:text="@string/login_using_fingerprint"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFingerprint"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/don_t_have_an_account_register"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>
