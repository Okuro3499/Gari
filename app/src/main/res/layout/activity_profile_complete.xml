<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileCompleteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/complete_profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvComplete"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvComplete"
                android:layout_marginStart="60dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvComplete"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/tvFirstName"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFirstName"
                android:layout_marginStart="60dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleEmail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/mobile"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmail"
                android:layout_marginStart="67dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleCounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleMobile"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/county"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMobile"
                android:layout_marginStart="69dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleMobile"
                android:layout_marginStart="160dp"
                android:layout_marginTop="2dp"
                android:text="@string/district"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMobile"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/titleDistrict"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleEstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleCounty"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/estate"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCounty"
                android:layout_marginStart="65dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleLandmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleDistrict"
                android:layout_marginStart="160dp"
                android:layout_marginTop="2dp"
                android:text="@string/landmark"
                android:textColor="@color/black"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLandMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCounty"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/titleLandmark"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleDlUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEstate"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="@string/upload_scanned_photo_of_drivers_license"
                android:textColor="@color/black"
                android:textSize="16.5sp" />

            <ImageView
                android:id="@+id/ivDl"
                android:layout_width="210dp"
                android:layout_height="150dp"
                android:layout_below="@id/titleDlUpload"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/driving_license_photo"
                app:srcCompat="@drawable/click" />

            <Button
                android:id="@+id/btDlUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivDl"
                android:layout_centerInParent="true"
                android:text="@string/upload"
                android:textSize="16.5sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/titleIdUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btDlUpload"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/upload_scanned_photo_of_identification_card_passport"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/ivId"
                android:layout_width="210dp"
                android:layout_height="150dp"
                android:layout_below="@id/titleIdUpload"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/identification_card_photo"
                app:srcCompat="@drawable/click" />

            <Button
                android:id="@+id/btIdUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivId"
                android:layout_centerInParent="true"
                android:text="@string/upload"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titlePhotoUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btIdUpload"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/upload_a_clear_image_showing_your_face"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="210dp"
                android:layout_height="150dp"
                android:layout_below="@id/titlePhotoUpload"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/user_photo"
                app:srcCompat="@drawable/click" />

            <Button
                android:id="@+id/btUserPhotoUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivPhoto"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/upload"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/titleEmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btUserPhotoUpload"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/enter_emergency_contacts"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleEmergencyContact"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/first_contact"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="300dp"
                android:layout_height="39dp"
                android:layout_below="@+id/tvContact1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/full_name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etRelationShip"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_below="@+id/etFullName"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/relationship"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etEmergencyMobile"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_below="@+id/etRelationShip"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/mobil"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titleContact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etEmergencyMobile"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/second_contact"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFullName2"
                android:layout_width="300dp"
                android:layout_height="39dp"
                android:layout_below="@+id/titleContact2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/full_name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etRelationShip2"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_below="@+id/etFullName2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/relationship"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etEmergencyMobile2"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_below="@+id/etRelationShip2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/mobil"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etEmergencyMobile2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:text="@string/submit" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>




