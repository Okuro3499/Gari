<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

    <ImageView
        android:id="@+id/tvImage"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@color/grey"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/titleCarName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvImage"
        android:background="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleDriveOption"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleCarName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvImage"
        android:background="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleTransmission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleDriveOption"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvImage"
        android:background="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titlePrice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTransmission"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvImage"
        android:background="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlePrice"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvImage"
        android:background="@color/grey"
        android:textSize="18sp" />

  </RelativeLayout>
</androidx.cardview.widget.CardView>