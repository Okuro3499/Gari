<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="customTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Gari" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/md_pink_500</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_pink_900</item>
        <item name="colorSecondaryVariant">@color/md_pink_A100</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="textColor">@color/md_black_1000</item>
        <item name="backgroundColor">@color/md_white_1000</item>
    </style>

    <style name="DarkGari" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/md_pink_500</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_pink_900</item>
        <item name="colorSecondaryVariant">@color/md_pink_A100</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="textColor">@color/md_white_1000</item>
        <item name="backgroundColor">@color/md_grey_800</item>

    </style>

    <style name="Theme.Gari_NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/md_pink_500</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_pink_900</item>
        <item name="colorSecondaryVariant">@color/md_pink_A100</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>